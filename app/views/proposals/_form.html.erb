<%= form_tag(search_work_path, method: 'get') do %>
	<%= hidden_field_tag :composer, @composer %>
	<%= hidden_field_tag :work, @work %>
	<%= hidden_field_tag :source_id, @source_id %>
	<div class="form-group">
	  <%= label_tag :q, 'Field' %>
	  <%= select_tag :search_field, options_for_select([ "composer", "work" ], "work"), options={ class: 'form-control'} %>
	</div>
	<div class="form-group">
	  <%= label_tag :q, 'Query' %>
	  <%= text_field_tag :search_param, nil, class: 'form-control' %>
	</div>

  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>